{% extends 'AppBundle::base.html.twig' %}

{% block content %}
    <div class="indexPagination">
        {% if previousPage > 0 %}
        <a href="{{ path('app_homepage', {'page': previousPage}) }}" class="btn paginationButton"><span class="glyphicon glyphicon-chevron-left"></span></a>
        {% endif %}
            <a href="{{ path('app_homepage', {'page': nextPage}) }}" class="btn paginationButton"><span class="glyphicon glyphicon-chevron-right"></span></a>
    Affichage des films #{{ minMovieId }} Ã  #{{ maxMovieId }} sur {{ movieCount|length }} films
    </div>
    {% for movie in movies %}
        <div class="indexMovies">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                <a href="{{ path('movie_detail', {'id': movie.id}) }}">
                    <img src="{{ asset('img/posters/'~ movie.imdbId ~'.jpg') }}" alt="Movie logo" class="img-responsive indexPoster">
                </a>
            </div>
        </div>
    {% endfor %}

{% endblock %}